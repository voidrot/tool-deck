root = true

# defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[*.rs]
max_line_length = 100
indent_style = space
indent_size = 4

[*.yml]
indent_size = 2

[Makefile]
indent_style = tab