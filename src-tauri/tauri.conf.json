{
  "productName": "tool-deck",
  "version": "0.1.0",
  "identifier": "com.buckbrady.tool-deck.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "trayIcon": {
      "iconPath": "../images/icon.png",
      "title": "Tool Deck"
    },
    "windows": [
      {
        "title": "tool-deck",
        "width": 1024,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      },
      {
        "width": 400,
        "height": 350,
        "decorations": false,
        "resizable": false,
        "fullscreen": false,
        "center": true,
        "maximizable": false,
        "minimizable": false,
        "alwaysOnTop": true,
        "hiddenTitle": true,
        "url": "splashscreen.html",
        "label": "splashscreen"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
