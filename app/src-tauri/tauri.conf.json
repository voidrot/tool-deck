{
  "productName": "tool-deck",
  "version": "0.1.0",
  "identifier": "com.buckbrady.tool-deck.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "enableGTKAppId": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "tool-deck",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "label": "splashscreen",
        "title": "loading",
        "url": "splashscreen.html",
        "width": 400,
        "height": 350,
        "decorations": false,
        "resizable": false,
        "fullscreen": false,
        "center": true,
        "maximizable": false,
        "minimizable": false,
        "alwaysOnTop": true,
        "hiddenTitle": true,
        "shadow": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.ico",
      "id": "tool-deck",
      "title": "Tool Deck",
      "tooltip": "Tool Deck"
    },
    "security": {
      "capabilities": [
        "default"
      ],
      "csp": null,
      "pattern": {
        "use": "brownfield"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": false,
    "linux": {
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      },
      "deb": {
        "files": {}
      },
      "rpm": {
        "epoch": 0,
        "files": {},
        "release": "1"
      }
    },
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      },
      "files": {},
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "cli": {
      "description": "Tool Deck CLI Example",
      "args": [
        {
          "short": "v",
          "name": "verbose",
          "description": "Verbosity level"
        }
      ],
      "subcommands": {
        "run": {
          "description": "Run the application",
          "args": [
            {
              "name": "debug",
              "description": "Run application in debug mode"
            },
            {
              "name": "release",
              "description": "Run application in release mode"
            }
          ]
        }
      }
    }
  }
}
